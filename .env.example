DEBUG=True  # Set to False in production
SECRET_KEY=your_secret_key_here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DBHOST=localhost
DBPORT=5432
DBNAME=your_db_name
DBUSER=your_db_user
DBPASSWORD=your_db_password
DATABASE_URL=postgres://your_db_user:your_db_password@localhost:5432/your_db_name

